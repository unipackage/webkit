{
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "target": "es5",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",  
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react",
    "incremental": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
